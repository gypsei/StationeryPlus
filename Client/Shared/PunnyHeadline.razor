<div class="position-relative overflow-hidden pb-3 pb-md-5 text-center" style="height: 100vh">
    <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#777"></rect></svg>
    <div class="col-md-5 p-lg-5 mx-auto my-5 d-grid align-content-center card-img-overlay">
    <h1 class="display-4 fw-normal">@CategoryTitle</h1>
    <p class="lead fw-normal">@CategorySubtitle</p>
    <a class="btn btn-outline-dark rounded-pill py-2" href="#">Learn More</a>
  </div>
</div>
@code {
    [Parameter]
    public string? CategoryTitle { get; set; }
    
    [Parameter]
    public string? CategorySubtitle { get; set; }
}